<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/timer"
        android:text="TIMER"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:background="@color/blackish"
        android:textColor="@color/whiteish"
        android:fontFamily="@font/limelight"
        android:textSize="24dp"
        android:padding="8dp"
        />

    <RelativeLayout
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/timer"

        >
        <ImageView
            android:id="@+id/role_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/role"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/role_icon"
            android:text="Sample Text"
            android:fontFamily="@font/limelight"
            android:textColor="@color/blackish"
            android:textSize="24dp"
            />

        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/role_icon"
            android:layout_below="@id/role"
            android:fontFamily="@font/limelight"
            android:text="Sample Text"
            android:textSize="24dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/actions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/info"
        >

        <TextView
            android:id="@+id/player_grid_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/limelight"
            android:textAlignment="center"
            android:text="Players"
            android:textSize="18dp"
            android:layout_marginLeft="4dp"
            />
        <GridLayout
            android:id="@+id/players_grid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/player_grid_text"
            android:layout_centerHorizontal="true"
            android:columnCount="5"
            >
        </GridLayout>

        <TextView
            android:id="@+id/locations_grid_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/limelight"
            android:layout_below="@id/players_grid"
            android:textAlignment="center"
            android:text="Locations"
            android:textSize="18dp"
            android:layout_marginLeft="4dp"
            />
        <GridLayout
            android:id="@+id/locations_grid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/locations_grid_text"
            android:layout_centerHorizontal="true"
            android:columnCount="5"
            >
        </GridLayout>
    </RelativeLayout>

</RelativeLayout>